<Window x:Class="WpfInotifyPropertyChange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfInotifyPropertyChange"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Nombre" Margin="10,10"></Label>
            <TextBox Width="300" Height="30" Text="{Binding  Path=Nombre, Mode=TwoWay}"></TextBox>
            <Label Content="Apellidos" Margin="10,10"></Label>
            <TextBox Width="300" Height="30" Text="{Binding  Path=Apellidos, Mode=TwoWay}"></TextBox>
            <Label Content="NombreCompleto" Margin="10,10"></Label>
            <TextBox Width="300" Height="30" Text="{Binding  Path=NombreCompleto, Mode=OneWay}"></TextBox>
        </StackPanel>
    </Grid>
</Window>
